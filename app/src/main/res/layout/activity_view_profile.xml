


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amill.cse5911dojo.ViewProfile">

<ImageView
android:layout_width="100dp"
android:layout_height="100dp"
android:adjustViewBounds="true"
android:id="@+id/belt_image"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:layout_marginTop="32dp"
/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/belt_image"
        android:layout_marginTop="16dp" />

    <TextView android:id="@+id/lbl_name"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/name"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
        android:layout_alignBottom="@+id/name" />
            />




        <TextView android:id="@+id/current_belt"
                  android:text="Current Belt: "
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/name"
            android:layout_marginTop="16dp"

            />

        <TextView android:id="@+id/lbl_current_belt"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/current_belt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_alignBottom="@+id/current_belt" />




        <TextView android:id="@+id/monkey_bucks"
                  android:text="Monkey Bucks: "
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/current_belt"
            android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/lbl_monkey_bucks"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/monkey_bucks"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_alignBottom="@+id/monkey_bucks" />


    <TextView android:id="@+id/avail_plays"
                  android:text="Available Plays: "
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/monkey_bucks"
        android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/lbl_avail_plays"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/avail_plays"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_alignBottom="@+id/avail_plays" />

    <TextView android:id="@+id/tot_plays"
                  android:text="Total Plays: "
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/avail_plays"
        android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/lbl_tot_plays"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@+id/tot_plays"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_alignBottom="@+id/tot_plays" />



        <TextView android:id="@+id/time_played"
                  android:text="Time Played: "
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/tot_plays"
            android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/lbl_time_played"
                  android:text=""
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/time_played"
            android:layout_alignBottom="@+id/time_played" />


</RelativeLayout>
